rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Player avatars
    match /players/{playerId}/avatar.{extension} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true &&
                      extension in ['jpg', 'jpeg', 'png', 'webp'] &&
                      request.resource.size < 2 * 1024 * 1024; // 2MB limit
    }
    
    // Match exports (PDFs)
    match /exports/matches/{matchId}.pdf {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      (request.auth.token.admin == true || request.auth.token.scorer == true);
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}